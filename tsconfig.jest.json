{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist-tests",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@docs/*": ["src/docs/*"],
      "@seeds/*": ["src/seeds/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
